    <div class="footer-note">
      Widget: overall progress updates as you change the % values.
    </div>
  </div>

  <script>
    window.addEventListener("DOMContentLoaded", function () {
      const table = document.getElementById("studyPlanTable");
      const rows = table.querySelectorAll("tbody tr");

      let total = 0;
      let count = 0;

      rows.forEach(row => {
        const progressCell = row.cells[5]; // 6th column: Progress
        if (!progressCell) return;

        const text = progressCell.textContent.trim();
        const match = text.match(/(\d+)%/);
        if (match) {
          const value = parseInt(match[1], 10);
          total += value;
          count += 1;
        }
      });

      const overall = count > 0 ? total / count : 0;
      const rounded = Math.round(overall);

      const bar = document.getElementById("overallProgressBar");
      const textEl = document.getElementById("overallProgressText");

      bar.style.width = rounded + "%";
      textEl.textContent = rounded + "%";

      // Color interpolation from white (#FFFFFF) to Tiffany blue (#0ABAB5)
      const t = overall / 100;
      const start = { r: 255, g: 255, b: 255 };
      const end   = { r: 10,  g: 186, b: 181 };

      const r = Math.round(start.r + (end.r - start.r) * t);
      const g = Math.round(start.g + (end.g - start.g) * t);
      const b = Math.round(start.b + (end.b - start.b) * t);

      bar.style.backgroundColor = `rgb(${r}, ${g}, ${b})`;
    });
  </script>
